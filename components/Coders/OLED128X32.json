{
    "name": "OLED128X32",
    "supportedControllers": [
        "ATMega328P",
        "ArduinoLeonardo",
        "ArduinoMega",
        "ArduinoMicro",
        "ArduinoNano",
        "ArduinoProMini3v3",
        "ArduinoProMini5v",
        "ArduinoUno",
        "ESP32DevKitC",
        "NodeMCU",
        "RPI3B"
    ],
    "code": {
        "globals:": "",
        "constructors:": "    #define SSD1306_LCDHEIGHT 32\n    {{classname}} {{varname}}({{RST}});\n",
        "setup:": "    {{varname}}.begin(SSD1306_SWITCHCAPVCC, 0x3C);  // initialize with the I2C addr 0x3C (for the 128x32)\n    {{varname}}.clearDisplay(); // Clear the buffer.\n    {{varname}}.display();\n",
        "snippetCode:": "    {{varname}}.setTextSize(1);\n    {{varname}}.setTextColor(WHITE);\n    {{varname}}.setCursor(0, 10);\n    {{varname}}.clearDisplay();\n    {{varname}}.println(\"Circuito.io Rocks!\");\n    {{varname}}.display();\n    delay(1);\n    {{varname}}.startscrollright(0x00, 0x0F);\n    delay(2000);\n    {{varname}}.stopscroll();\n    delay(1000);\n    {{varname}}.startscrollleft(0x00, 0x0F);\n    delay(2000);\n    {{varname}}.stopscroll();"
    },
    "license": "BSD",
    "instantiate": {
        "classname": "Adafruit_SSD1306",
        "ports": [
            "RST"
        ],
        "varname": "oLed128x32"
    },
    "files": [
        "lib/*"
    ],
    "includeHeaders": [
        "Wire.h",
        "SPI.h",
        "Adafruit_SSD1306.h",
        "Adafruit_GFX.h"
    ]
}